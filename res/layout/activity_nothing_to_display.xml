<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:weightSum="1"
     android:orientation="vertical"
     android:background="@drawable/nothingback"
    tools:context="com.example.smsservice.NothingToDisplay" >
   
   <LinearLayout
         android:layout_width="match_parent"
           android:layout_weight=".07"
           android:layout_height="0dp"
           android:orientation="horizontal"
            android:background="#7600e5"
            android:weightSum="1"
         >
         
        <ImageView 
            android:layout_width="0dp"
            android:layout_weight=".12"
             android:layout_height="match_parent"
              android:src="@drawable/unnamed"
              
            />
        
        
        <TextView
            
        android:text="@string/hello_world"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight=".35"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#FFFFFF" 
       />
        
        
    </LinearLayout>
    
    
    
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".06"
        android:text="@string/nothing"
         android:textSize="20dp"
         android:background="#fbd9b6"
         android:textColor="#f2810d" />
    
    <View
             android:layout_width="fill_parent"
             android:layout_height="7dp"
             android:background="#66e6c1"/>
    
    
    
    <ListView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        ></ListView>
    
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight=".07"
         android:layout_marginBottom="0dp"
         android:background="#95959a"
         android:orientation="horizontal"
         android:weightSum="1"
        
          >
        
        <ImageButton
            android:src="@drawable/msg"
            android:layout_marginLeft="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Msg"
            android:layout_weight=".13"
            />

        <Button
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight=".87"
         android:layout_height="match_parent"
         android:text="New SMS"
         android:textSize="20dp"
         android:id="@+id/newsm"
         android:background="#8b7fb0"
         android:textColor="#f2810d" />
    
       
       
    </LinearLayout>
    

</LinearLayout>
